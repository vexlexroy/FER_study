		<a target="_blank" href="https://www.freepik.com/free-vector/hand-painted-watercolor-galaxy-background_14237502.htm#query=cosmic&position=0&from_view=search&track=sph">by pikisuperstar</a> on Freepik<br>
	</p>
</div>

<div id="product_box">

<% if (id >= 0) { %>
    <% create(id); %>
<% } else{ let product=0;  } %>


<% function create(index) { %>
  <% let i = index; %>
  
  <% for (let j = 0; j < product.length; j++) { %>
    <div id="product" class="kat_<%= i %>">
      <div id="product_img">
        <span id="elementadd_<%= product[j].id %>"></span>
        <img src="/images/<%= product[j].image %>"
          onerror="this.onerror=null;this.src='/images/unknown.png';"
          alt="slika" id="image_style">
        <div id="add_to_cart" onclick="ispisi(<%= product[j].id %>)">+</div>
      </div>
      <p id="title"><br><%= product[j].name %></p>
    </div>
  <% } %>
<% }  %>

<% let curid=id%>
</div>

