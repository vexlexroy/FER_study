<body id="layout_box">

<%- include('partials/header',{ siteID:id }) %>
<% let sesIDq = "?session=" + sessionId %>
<div id="kategory_select">
	<form name="select" onclick = ''>
		<% for(let i=0;i<categori.length;i++){ %>
			<input type="radio" name="a" id="<%= categori[i].name.toLowerCase() %>" value="<%= i+2 %>" <% if (id==i){ %> checked="checked" <% } %> onclick='loadSite(<%= i %>,"<%= sesIDq %>")' >
			<label for="<%= categori[i].name.toLowerCase() %>"><%= categori[i].name.toUpperCase() %></label></input><br>
		<% } %>
	</form>
</div>
<div id="prezentation_box">
	<div id="prezentation_txt"><p>!! Best quality  &  Best choice !!</p></div>
</div>

<div id="info">
	<p>
		Call number: 00 000 0000<br>
		Email: name@tag.f3r<br>
		Partners: name@tag.f3r<br>
		Image by <a target="_blank" href="https://www.freepik.com/free-vector/fast-food-icons-pixel-art_29012364.htm#query=pants%20pixel&position=49&from_view=search&track=ais">Freepik</a><br>
		Image by <a target="_blank" href="https://www.freepik.com/free-vector/realistic-luxury-background-design_17752828.htm#query=gold&position=14&from_view=search&track=sph">Freepik</a><br>
